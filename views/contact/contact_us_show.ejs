<!-- contact -->

<%- include('../partials/header'); %>

<%- include('../partials/top_fixed_header'); %>

<%- include('../partials/page_title'); %>

<section class="section bg-gray">
    <div class="container">
        <ul class="list-inline text-right">
            <%if(loggedIn){%>
            <li>
            <li>
                <a class="btn btn-sm btn-primary mb-1" href="/contact/create">New Post</a>
            </li>
            </li>
            <%} else {%>
            <li>
            </li>
            <%}%>
        </ul>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Contact Us</h2>
            </div>
        </div>

        <% for (var i=contactUs.length-1; i>=contactUs.length-1; i--) {%>
        <ul class="list-inline text-left mb-3">
            <%if(loggedIn){%>
            <a href="/contact/post/<%=contactUs[contactUs.length-1]._id%>/edit" class="btn btn-sm btn-primary-outline mb-3">Edit</a>
            <a href="/contact/post/<%=contactUs[contactUs.length-1]._id%>/delete" class="btn btn-sm btn-danger mb-3">Delete</a>
            <%} else {%>
            <li>
            </li>
            <%}%>
        </ul>
        <div class="row">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <h3 class="section-title">Phone Numbers</h3>
                <p><a href="tel:+<#%=contactUs[contactUs.length-1].phone1%>" class="text-color h5 d-block"><%=contactUs[contactUs.length-1].phone1%></a></p>

                <p><a href="tel:+<#%=contactUs[contactUs.length-1].phone2%>" class="text-color h5 d-block"><%=contactUs[contactUs.length-1].phone2%></a></p>
                <h3 class="section-title">Email</h3>
                <p><a href="<%-contactUs[contactUs.length-1].email%>" class="mb-5 text-color h5 d-block"><%=contactUs[contactUs.length-1].email%></a></p>

                <h3 class="section-title">Facebook Page</h3>
                <p><a href="<%-contactUs[contactUs.length-1].f%>">GM College Facebook Page</a></p>

                <h3 class="section-title">College Address</h3>
                <p><%=contactUs[contactUs.length-1].address%></p>
            </div>
            <div class="col-lg-5">
                <p class="mb-5"> <p>  <%-contactUs[contactUs.length-1].description%> </p>
            </div>
        </div>
        <%}%>
    </div>
</section>
<!-- /contact -->


<%- include('../partials/footer') %>